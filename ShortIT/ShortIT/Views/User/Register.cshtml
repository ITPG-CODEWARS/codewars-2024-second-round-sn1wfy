@model ShortIT.ViewModel.MainUserVM

<div class="container mt-5">
    <div class="card shadow-lg mx-auto" style="max-width: 400px;">
        <div class="card-header bg-primary text-white text-center">
            <h2>Register</h2>
        </div>
        <div class="card-body">
            <form asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Username Input Field -->
                <div class="form-group mb-3">
                    <label asp-for="Username" class="control-label font-weight-bold">Username</label>
                    <input asp-for="Username" class="form-control" placeholder="Choose a username" required />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <!-- Password Input Field -->
                <div class="form-group mb-3">
                    <label asp-for="Password" class="control-label font-weight-bold">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Choose a secure password" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Create Account</button>
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <a href="/Home/Index" class="btn btn-secondary">Back</a>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<!-- Additional Styling -->
<style>
    .card {
        border-radius: 8px;
    }

    .card-header {
        font-size: 1.5rem;
    }

    .form-group label {
        font-weight: 600;
    }

    .form-group input::placeholder {
        font-style: italic;
        color: #aaa;
    }
</style>
