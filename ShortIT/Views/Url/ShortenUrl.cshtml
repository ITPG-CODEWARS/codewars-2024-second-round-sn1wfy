@model ShortIT.ViewModel.ShortenVM

@{
    ViewData["Title"] = "Shorten URL";
}

<div class="container mt-5">
    <div class="card shadow-lg mx-auto" style="max-width: 500px;">
        <div class="card-header bg-primary text-white text-center">
            <h2>Create Shortened URL</h2>
        </div>
        <div class="card-body">
            <form asp-action="ShortenUrl">
                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- URL Input Field with Validation -->
                <div class="form-group mb-3">
                    <label asp-for="Url" class="control-label font-weight-bold">Enter URL</label>
                    <input asp-for="Url" class="form-control" placeholder="https://example.com" required />
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>

                <!-- Submit and Back Buttons -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg me-2">Create</button>
                    <a asp-action="Dashboard" class="btn btn-secondary btn-lg">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<!-- Additional Styling -->
<style>
    .card {
        border-radius: 8px;
    }

    .card-header {
        font-size: 1.5rem;
    }

    .form-group label {
        font-weight: 600;
    }

    .form-group input::placeholder {
        font-style: italic;
        color: #aaa;
    }
</style>
