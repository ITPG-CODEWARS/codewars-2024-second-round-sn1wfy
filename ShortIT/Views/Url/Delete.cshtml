@model ShortIT.Entity.ShortenedURL

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="card shadow-lg mx-auto" style="max-width: 600px;">
        <div class="card-header bg-danger text-white text-center">
            <h2>Confirm Deletion</h2>
        </div>
        <div class="card-body">
            <h5 class="text-center text-danger mb-4">Are you sure you want to delete this URL?</h5>
            <dl class="row">
                <dt class="col-sm-4 text-right font-weight-bold">Shortened URL</dt>
                <dd class="col-sm-8">
                    <a href="@($"{Context.Request.Scheme}://{Context.Request.Host}/{Model.ID}")" target="_blank">
                        @($"{Context.Request.Scheme}://{Context.Request.Host}/{Model.ID}")
                    </a>
                </dd>

                <dt class="col-sm-4 text-right font-weight-bold">@Html.DisplayNameFor(model => model.Url)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Url)</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <form asp-action="Delete" method="post">
                <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                <a asp-action="DashBoard" class="btn btn-secondary btn-lg ms-3">Cancel</a>
            </form>
        </div>
    </div>
</div>

<!-- Additional Styling -->
<style>
    .card {
        border-radius: 8px;
    }

    .card-header {
        font-size: 1.5rem;
    }

    dl.row dt {
        font-weight: 600;
        color: #555;
    }
</style>
